{
  "name": "my-movie-application-back-end",
  "version": "1.0.0",  
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit --detectOpenHandles",
    "test:users": "NODE_ENV=test jest tests/users.test.js --runInBand --forceExit",
    "test:movies": "NODE_ENV=test jest tests/movies.test.js --runInBand --forceExit", 
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:verbose": "NODE_ENV=test jest --verbose --runInBand --forceExit"
  },
  "keywords": [
    "node",
    "express", 
    "mongodb",
    "api",
    "crud"
  ],
  "author": "Andy Ramaroson",
  "license": "ISC",
  "description": "Backend API for Movie App with CRUD operations",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "3.6.2",
    "nodemon": "3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "runInBand": true,
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/models/**",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
